<UserControl x:Class="Common.XAML.Windows.MaximizeButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commwin="clr-namespace:Common.XAML.Windows"
    >

    <Grid x:Name="LayoutRoot">
        <Button x:Name="btnMaximize" Style="{StaticResource TitleBarButton}">
            <Button.Content>
                <Grid>
                    <Rectangle Height="16" Width="16">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint=".5,0" EndPoint=".5,1">
                                <GradientStop Color="#FFFFFFFF" Offset="0"/>
                                <GradientStop Color="#FF008EB7" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Rectangle Margin="1,-1,0,0" Width="12" Height="12" Stroke="#FF004C62" StrokeThickness="2" Fill="Transparent" />
                        <Rectangle Margin="-5,5,0,0" Width="10" Height="10" Stroke="#FF004C62" StrokeThickness="2" Fill="Transparent" />
                    </Grid>
                </Grid>
            </Button.Content>
        </Button>
    </Grid>

</UserControl>
